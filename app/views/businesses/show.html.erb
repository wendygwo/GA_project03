          <% @products.each do |product| %>
  </div>        
  <div class="col-sm-3 col-md-3">
    <div class="thumbnail">
          <h3><%= product.name %></h3>
          <%= link_to product_path(product) do %>
          <%= image_tag product.product_image.url(:thumb) %><br />
          <% end %>
        <div class="caption">
        <hr />
          <p>Price: $<%= product.price %></p>
          <p>Quantity: <%= product.quantity %></p>
