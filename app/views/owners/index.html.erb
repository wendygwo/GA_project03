<div class="container-fluid">

<p id="notice"><%= notice %></p>

<h1>Listing Owners</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address street</th>
      <th>Address city</th>
      <th>Address state</th>
      <th>Address zip</th>
      <th>Phone number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.address_street %></td>
        <td><%= owner.address_city %></td>
        <td><%= owner.address_state %></td>
        <td><%= owner.address_zip %></td>
        <td><%= owner.phone_number %></td>
        <td><%= owner.email %></td>
        <td><%= link_to 'Show', owner, class: " btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' }, class: "de5troy btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-primary btn-sm" %>

</div>
