<%= bootstrap_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.file_field :product_image %>
  </div> 
  <div class="field">
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%#= f.text_field :category %>
    <%= f.collection_select :category_id, @categories, :id, :category_name %>
  </div>
 <div class="field">
    <%#= f.label :business_id %><br>
    <%# f.text_field :business_id, value:params[:business_id] %>
  </div> 

  <!-- Using a hidden field to pass the owner_id! -->
