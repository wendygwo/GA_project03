<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Description</th>
      <th>Category</th>
      <th>Business ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.category.category_name %></td>
        <td><%= product.business_id %></td>
        <td><%= link_to 'Show', product, class: "sh0w btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "ed1t btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "back btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

